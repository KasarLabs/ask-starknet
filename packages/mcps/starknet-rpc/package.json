{
  "name": "@kasarlabs/starknet-rpc-mcp",
  "version": "0.1.5",
  "main": "index.js",
  "type": "module",
  "bin": {
    "starknet-rpc-mcp": "./bin/starknet-rpc-mcp.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "clean": "rm -rf build",
    "clean:all": "rm -rf build node_modules",
    "start": "node build/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules jest __tests__/e2e --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "@kasarlabs/ask-starknet-core": "workspace:*",
    "@langchain/core": "^0.3.42",
    "@modelcontextprotocol/sdk": "1.22.0",
    "dotenv": "^16.4.7",
    "starknet": "8.6.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.2"
  },
  "keywords": [
    "mcp",
    "starknet",
    "rpc"
  ],
