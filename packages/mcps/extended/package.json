    "test:e2e:bridge": "NODE_OPTIONS=--experimental-vm-modules jest __tests__/e2e/read_bridge.e2e.test.ts",
    "test:e2e:market-data": "NODE_OPTIONS=--experimental-vm-modules jest __tests__/e2e/read_market_data.e2e.test.ts",
    "test:e2e:trading": "NODE_OPTIONS=--experimental-vm-modules jest __tests__/e2e/write_trading.e2e.test.ts"
