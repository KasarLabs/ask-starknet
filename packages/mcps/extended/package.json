  "dependencies": {
    "@kasarlabs/ask-starknet-core": "workspace:*",
    "@modelcontextprotocol/sdk": "1.22.0",
    "@x10xchange/stark-crypto-wrapper-wasm": "^0.1.6",
    "axios": "^1.7.9",
