    "@types/lodash": "^4.17.21",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.10",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.2"
  },
  "keywords": [
    "mcp",
    "starknet",
    "extended"
