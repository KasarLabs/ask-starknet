{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "types": ["jest", "node"],
    "declaration": false,
    "sourceMap": false
  },
  "include": ["./src/**/*", "./__tests__/**/*"]
}
